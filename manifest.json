{
    "manifest_version": 3,
    "name": "Shorts Remover",
    "description": "Removes Shorts from YouTube.",
    "version": "1.0",

    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset",
                "enabled": true,
                "path": "ruleset.json"
            }
        ]
    },

    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "css": [
                "css/index.css"
            ]
        }
    ],

    "permissions": [
        "declarativeNetRequest",
        "declarativeNetRequestFeedback"
    ],

    "host_permissions": [
        "https://www.youtube.com/*"
    ]
}